    <script>
       
        //Gọi modal chọn kỳ thi
        function ChonKyThi(type) {
            if (type == 0) {
                document.getElementById("divHinhThucThi").style.display = 'block';
                $('#loaiMD').val('1');
            }
            else {
                document.getElementById("divHinhThucThi").style.display = 'none';
            }
            $.ajax({
                url: '/HomeAd/GetCuocThi?type='+type,
                success: function (res) {
                    var selectCuocThi = $('#txtKyThi_ChonKyThi');
                    var op = "<option value=0>Chọn cuộc thi</option>";
                    $.each(res.data, function (i, item) {
                        op += '<option value=' + item.ID + '>' + item.TenCuocThi + '</option>'
                    });
                    selectCuocThi.html(op);
                }
            });
            $('#mdlChonKyThi').modal('show');
        }
        function Get_IDKyThi() {
            var id = $('#txtKyThi_ChonKyThi').val();
            if (id == 0) {
                $('#macuocthi').text('');
                $('#txtMa_ChonKyThi').text('');
                $('#txtTen_ChonKyThi').html('');
                $('#txtNgayBD_ChonKyThi').html('');
                $('#txtNgayKT_ChonKyThi').html('');
                $('#txtIDKyThi_ChonKyThi').val(0);
                document.getElementById("btnChonCuocThi_DongY").disabled = true;
            }
            else {
                $.ajax({
                    url: '/HomeAd/GetDetailCuocThi',
                    data: { id: id },
                    type: 'post',
                    success: function (result) {
                        if (result.status == true) {
                            $('#macuocthi').text(result.data.MaCuocThi);
                            $('#txtMa_ChonKyThi').text(result.data.MaCuocThi);
                            $('#txtTen_ChonKyThi').html(result.data.TenCuocThi);
                            $('#txtNgayBD_ChonKyThi').html(result.data.ThoiGianBatDau);
                            $('#txtNgayKT_ChonKyThi').html(result.data.ThoiGianKetThuc);
                            $('#txtIDKyThi_ChonKyThi').val(id);
                            document.getElementById("btnChonCuocThi_DongY").disabled = false;
                        }
                    }
                })
            }
        }
        function DongY_ChonKyThi() {
            var loai = $('#loaiMD').val();
            if (loai == 0) {
                var idKyThi = $('#txtIDKyThi_ChonKyThi').val();
                if (idKyThi != 0) {
                    $('#mdlChonKyThi').modal('hide')
                    Add(0, idKyThi);

                } else {
                    $('#error').html('Vui lòng chọn cuộc thi');
                    $('#error').css('display', 'block');
                }
            }
            else {
                var idKyThi = $('#txtIDKyThi_ChonKyThi').val();
                var idLoai = $('#ddlChonHinhThuc').val();
                if (idKyThi != 0) {
                    $('#mdlChonKyThi').modal('hide');
                    if (idLoai == 1) {
                        window.location = '/Admin/NguoiThi/DSDoiThi?idCuocThi=' + idKyThi;
                    }
                    else {
                        window.location = '/Admin/NguoiThi/DSThiCaNhan?idCuocThi=' + idKyThi;
                    }
                } else {
                    $('#error').html('Vui lòng chọn cuộc thi');
                    $('#error').css('display', 'block');
                }
            }
            
        };
    </script>
